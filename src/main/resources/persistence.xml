<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="TEST_RENT_PU" transaction-type="RESOURCE_LOCAL">
        <class>pl.nbd.cinema.hall.Hall</class>
        <class>pl.nbd.cinema.hall.Seat</class>
        <class>pl.nbd.cinema.movie.Movie</class>
        <class>pl.nbd.cinema.performance.Performance</class>
        <class>pl.nbd.cinema.ticket.Ticket</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <shared-cache-mode>NONE</shared-cache-mode>
        <validation-mode>CALLBACK</validation-mode>

<properties>
<property name="jakarta.persistence.jdbc.url" value="jdbc:derby:memory:target/nbddb;creature=true"/>
<property name="jakarta.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
<property name="jakarta.persistence.jdbc.user" value="nbd"/>
<property name="jakarta.persistence.jdbc.password" value="nbdpassword"/>
<property name="eclipselink.logging.level" value="FINE"/>
<property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
</properties>
</persistence-unit>
</persistence>